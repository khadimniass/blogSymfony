{% extends 'base.html.twig' %}

{% block body %}
    <article>
        <h2>{{ article.title | raw }}</h2>
        <div class="metada">ecrit le {{ article.createAt | date('d/m/Y') }}  à
            {{ article.createAt | date('H:i') }} dans la catégorie politique</div>
        <div class="content">
            <img src="{{article.image}}" alt="">
            <hr>
            {{article.content |raw}}
        </div>
    </article>
{% endblock %}