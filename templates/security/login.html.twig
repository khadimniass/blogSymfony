{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1>coonectez vous </h1>

            <form action="{{ path('security_login') }}" method="post">
                <div class="form-group">
                    <label for="e-mail">e-mail</label>
                    <input id="e-mail" type="text" name="_username" placeholder="address e-mail" required  class="form-control">
                </div>

                <div class="form-group">
                    <label for="password">mot de passe</label>
                    <input id="password" type="password" name="_password" required placeholder="mot de pass" class="form-control">
                </div>
